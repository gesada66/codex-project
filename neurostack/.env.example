###############################################
# NeuroStack Environment Variables (Example)
#
# Copy this file to `.env.local` and fill in values.
# Do NOT commit `.env.local` to version control.
###############################################

# --- API Keys ---
# OpenAI API key (required)
OPENAI_API_KEY=
# Default model for general use (example shown)
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# LlamaIndex / LlamaCloud API key (required if using LlamaIndex)
# If you are using LlamaCloud hosted services, set this key.
LLAMA_CLOUD_API_KEY=
# Optional: override endpoint if needed
# LLAMA_CLOUD_ENDPOINT=

# --- Per-Agent Model Overrides ---
# Leave blank to fall back to OPENAI_DEFAULT_MODEL
NEUROSTACK_MODEL_UI=
NEUROSTACK_MODEL_API=
NEUROSTACK_MODEL_PARSE=
NEUROSTACK_MODEL_INDEX=
NEUROSTACK_MODEL_CHAT=
NEUROSTACK_MODEL_INFRA=

# --- App Runtime / Deployment ---
# Deployment target for front-end logic: local | staging
NEXT_PUBLIC_DEPLOY_TARGET=local
# Enable heavier benchmarks only in staging/cloud
ENABLE_BENCHMARKS=false

# --- Server / App Settings ---
API_BASE_URL=
PORT=3000
LOG_LEVEL=info
# Disable Next.js telemetry in local dev if desired
NEXT_TELEMETRY_DISABLED=1

# --- Notes ---
# - Add any other provider keys you need here (e.g., ANTHROPIC_API_KEY).
# - Ensure `.env.example` stays updated when adding new required vars.
